---
import type { Trailer } from '../data/trailers';
import FeaturedTrailerFeatures from './FeaturedTrailerFeatures.astro';

interface Props {
  trailer: Trailer;
}

const { trailer } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-300 hover:scale-[1.02]">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
    <div class="relative h-[400px] lg:h-full">
      <img
        src={trailer.images[0]}
        alt={trailer.title}
        class="absolute inset-0 w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
    </div>
    <div class="p-8 lg:p-12 flex flex-col justify-between">
      <div>
        <h3 class="text-2xl font-bold text-gray-900">{trailer.title}</h3>
        <p class="mt-4 text-lg text-gray-600">{trailer.description}</p>
        
        <FeaturedTrailerFeatures features={trailer.features.slice(0, 4)} />
      </div>
      
      <div class="mt-8 flex flex-col sm:flex-row gap-4">
        <a
          href={`/trailers/${trailer.slug}`}
          class="flex-1 text-center px-6 py-3 bg-primary-700 text-white rounded-lg hover:bg-primary-800 transition-colors duration-200"
        >
          Meer Info
        </a>
        <a
          href={`/boeken?trailer=${trailer.slug}`}
          class="flex-1 text-center px-6 py-3 border-2 border-primary-700 text-primary-700 rounded-lg hover:bg-primary-50 transition-colors duration-200"
        >
          Direct Boeken
        </a>
      </div>
    </div>
  </div>
</div>