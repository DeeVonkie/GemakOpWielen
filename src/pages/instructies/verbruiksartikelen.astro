<style>
  .highlight {
    animation: highlight-animation 1s ease-in-out;
  }

  @keyframes highlight-animation {
    0% {
      background-color: rgba(23, 64, 153, 0.2); /* Light blue highlight */
    }
    100% {
      background-color: transparent;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const links = document.querySelectorAll('a[href^="#"]'); // Select all anchor links with a hash

    links.forEach(link => {
      link.addEventListener("click", event => {
        event.preventDefault(); // Prevent default anchor behavior

        const targetId = link.getAttribute("href").substring(1); // Get the target ID
        const targetElement = document.getElementById(targetId);

        if (targetElement) {
          const offset = targetElement.getBoundingClientRect().top + window.scrollY; // Get the element's position
          const centerOffset = offset - (window.innerHeight / 2) + (targetElement.offsetHeight / 2); // Center the element

          window.scrollTo({
            top: centerOffset,
            behavior: "smooth" // Smooth scrolling
          });

          // Add animation to the target element
          targetElement.classList.add("highlight");
          setTimeout(() => {
            targetElement.classList.remove("highlight");
          }, 1000); // Remove the highlight after 1 second
        }
      });
    });
  });
</script>